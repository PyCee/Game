
#ifndef _TEXTURE_
#define _TEXTURE_

#include <SDL2/SDL_opengl.h>
#include <assimp/cimport.h>
#include <assimp/scene.h>
#include <assimp/postprocess.h>

typedef struct _Texture {
	GLuint id;
	unsigned char *type;
	char *path;
} Texture;

Texture genTexture(GLuint, unsigned char *);

#endif /* _TEXTURE_ */
