
#ifndef _DYN_ACTOR_
#define _DYN_ACTOR_

#define HEALTH_MAX 100
#define HEALTH_MIN 0

// TODO: find out reason forward declaration is not enough to move forward
//typedef struct _Physics_t Physics_t;
#include "DynActorComponents/physics.h"

#define UNDEFINED_Dyn_Actor_NAME "UNDEFINED_Dyn_Actor_NAME"
typedef struct _Matrix_t Normal_t;

static U64 Dyn_ActorID = 0;
typedef struct _Dyn_Actor_t
{
	void (*Update)(struct _Dyn_Actor_t *, U64);
	U64 Dyn_ActorID;
	I8 Health;
	U8 Control;
	U8 *Dyn_ActorName;
	Physics_t *physics;
	Normal_t *direction;
} Dyn_Actor_t;

void genDyn_Actor(Dyn_Actor_t **);
void freeDyn_Actor(Dyn_Actor_t **);

void AssignDyn_ActorID(Dyn_Actor_t *);
U64 getDyn_ActorID(Dyn_Actor_t *);
void setBounds(Dyn_Actor_t *, F64, F64);
void Update(Dyn_Actor_t *, U64);

void UselessUpdate(Dyn_Actor_t *, U64);

void Move(Dyn_Actor_t *, F64, F64);
void setPos(Dyn_Actor_t *, F64, F64);

#endif /* _DYN_ACTOR_ */
