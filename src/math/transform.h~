
#ifndef _ROTATE_
#define _ROTATE_


typedef struct _Matrix_t Matrix_t;

// around space
Matrix_t *Transform(Matrix_t *, double, double, double);
// around X axis
Matrix_t *Pitch(Matrix_t *, double);
// around Z axis
Matrix_t *Yaw(Matrix_t *, double);
// around Y axis
Matrix_t *Rotate(Matrix_t *, double);

#endif
